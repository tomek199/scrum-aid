.modal-header
  %h3 New sprint
.modal-body
  %form.form-horizontal{name: "createSprintForm"}
    .form-group{"sc-valid" => '{{createSprintForm.name}}'}
      %label.control-label.col-sm-2{for: :name}
        %span.text-danger*
        Name
      .col-sm-10
        %input#name.form-control.input{type: :text, name: :name,
        "ng-model" => "sprint.name", required: true}
        %sc-invalid{value: "{{createSprintForm.name}}"}
    .form-group{"sc-valid" => '{{createSprintForm.start_date}}'}
      %label.control-label.col-sm-2{for: :start_date}
        %span.text-danger*
        Start date
      .col-sm-4
        .input-group
          %input#start_date.form-control.input{type: :text, name: :start_date,
          "ng-model" => "sprint.start_date", "datepicker-popup" => "dd.MM.yyyy",
          "is-open" => "datepickers[0].opened", "min-date" => "minDate", "ng-change" => "updateEndDate()", required: true}
          %span.input-group-btn
            %button.btn.btn-default{type: :button, "ng-click" => "open($event, 0)"}
              %span.glyphicon.glyphicon-calendar
        %sc-invalid{value: "{{createSprintForm.start_date}}"}
      .col-sm-2
        %timepicker{"ng-model" => "sprint.start_date", "show-spinners" => "false",
        "show-meridian" => "false"}
    .form-group{"sc-valid" => '{{createSprintForm.end_date}}'}
      %label.control-label.col-sm-2{for: :end_date}
        %span.text-danger*
        End date
      .col-sm-4
        .input-group
          %input#end_date.form-control.input{type: :text, name: :end_date,
          "ng-model" => "sprint.end_date", "datepicker-popup" => "dd.MM.yyyy",
          "is-open" => "datepickers[1].opened", "min-date" => "sprint.start_date", required: true}
          %span.input-group-btn
            %button.btn.btn-default{type: :button, "ng-click" => "open($event, 1)"}
              %span.glyphicon.glyphicon-calendar
        %sc-invalid{value: "{{createSprintForm.end_date}}"}
      .col-sm-2
        %timepicker{"ng-model" => "sprint.end_date", "show-spinners" => "false",
        "show-meridian" => "false"}
    .form-group
      %label.control-label.col-sm-2{for: :goal} Goal
      .col-sm-10
        %textarea.form-control{rows: "3", name: "goal",
        "ng-model" => "sprint.goal"}
.modal-footer
  %button.btn.btn-primary{"ng-click" => "create()",
  "ng-disabled" => "!createSprintForm.$valid"}
    Create
  %button.btn.btn-default{"ng-click" => "cancel()"}
    Cancel
