.page-header
  %h2
    Projects
    %button.btn.btn-success.pull-right{"ng-click" => "new()"}
      %span.glyphicon.glyphicon-plus
      New

%sc-empty-list{list: "{{projects}}"}
%table.table.table-hover{"ng-show" => "projects.length"}
  %thead
    %th #
    %th Name
    %th Description
    %th.text-right Actions
  %tbody{"ng-repeat" => "project in projects"}
    %tr
      %td {{$index + 1}}
      %td
        %a{href: "#", "ng-click" => "projectShow($index)"} {{project.name}}
      %td
        {{project.description}}
        %sc-empty{value: "{{project.description}}"}
      %td.text-right
        %button.btn.btn-xs.btn-danger{tooltip: "Delete", "ng-click" => "delete($index)"}
          %span.glyphicon.glyphicon-remove

