.page-header
  %h2
    Project
    %small{"editable-text" => "project.name"} {{project.name}}
.col-md-2
  %ng-include{src: "'projects/nav.html'"}
.col-md-10
  %h3
    Details
  .form-horizontal{name: "ProjectForm"}
    .form-group-lg
      %label.control-label.col-md-2{for: :name}
        Name:
      .col-md-10
        %p.form-control-static.text-muted{"editable-text" => "project.name"}
          {{project.name}}
    .form-group-lg
      %label.control-label.col-md-2{for: :description}
        Description:
      .col-md-10
        %p.form-control-static.text-muted{"editable-textarea" => "project.description"}
          {{project.description}}
    .form-group-lg
      %label.control-label.col-md-2{for: :length}
        Sprint length:
      .col-md-4
        %select#length.form-control{"ng-model" => "project.sprint_length", "ng-options" => "length.key as length.value for length in lengths", "ng-change" => "updateSprintLength()"}
