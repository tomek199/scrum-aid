%h4
  %ol.breadcrumb
    %li 
      %a{href: "/projects"} Projects
    %li
      %a{href: "/projects/{{project._id.$oid}}"} {{project.name}}
    %li.active Events
.col-md-2
  %ng-include{src: "'projects/nav.html'"}
.col-md-10
  %h3
    Events
    %button.btn.btn-success.pull-right{type: :button, "ng-click" => "new()"}
      %span.glyphicon.glyphicon-plus 
      New
  %hr
  %div{"ui-calendar" => "uiConfig.calendar", "ng-model" => "eventSources", "ng-class" => "viewMode.calendarClass"}
  %div{collapse: "viewMode.isCollapsed", "ng-class" => "viewMode.eventClass"}
    .btn-group{dropdown: ""}
      %button.btn.btn-default.btn-xs{type: :button}
        Edit
      %button.btn.btn-danger.btn-xs{type: :button, "ng-click" => "delete()"}
        Remove
    %button.close{type: :button, tooltip: "Close", "ng-click" => "close()"}
      %span &times;
    %hr
    %form
      .form-group
        %label Title:
        %p.form-control-static.text-muted {{selectedEvent.title}}
      .form-group
        %label Start:
        %p.form-control-static.text-muted {{selectedEvent.start | date: 'dd.MM.yyyy'}}
      .form-group
        %label End:
        %p.form-control-static.text-muted {{(selectedEvent.end | date: 'dd.MM.yyyy HH:mm') || 'All day event'}}
      .form-group
        %label Description:
        %p.form-control-static.text-muted {{selectedEvent.description}}
